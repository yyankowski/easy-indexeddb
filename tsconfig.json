{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "strictNullChecks": false,
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "sourceMap": false
  },
  "exclude": [
    "./tmp",
    "./test",
    "./dist",
    "./node_modules"
  ],
  "files": ["./src/index.ts"],
  "types": ["./src/index.ts"]
}